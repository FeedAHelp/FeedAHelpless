{ 
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./controllers/*", 
        "../../packages/*"
      ]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
}
